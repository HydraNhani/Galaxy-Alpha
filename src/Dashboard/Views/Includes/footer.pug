            .col-md-2.mx-auto.mb-4 
                h6.text-uppercase.font-weight-bold Links
                hr.mb-4.mt-0.d-inline-block.mx-auto(style="width: 110px; height: 2px;")

                ul.list-unstyled
                    li.my-2
                        a(href="/") Home
                    li.my-2
                        a(href="/commands") Commands
                    li.my-2
                        a(href="/stats") Stats
                    li.my-2 
                        a(href="/dashboard") Dashboard 
                    li.my-2 
                        a(href="/premium") Premium
            .col-md-3.mx-auto.mb-4 
                h6.text-uppercase.font-weight-bold Contact
                hr.mb-4.mt-0.d-inline-block.mx-auto(style="width: 75px; height: 2px;")

                ul.list-unstyled
                    li.my-2 
                        a(href="/supportserver", target="_blank") Support Server
    .footer-copyright.text-center.py-3 
        if new Date(client.user.createdTimestamp).getUTCFullYear() == new Date().getUTCFullYear()
            p &copy; #{new Date().getUTCFullYear()} #{client.user.username}. All rights reserved.
        else 
            p &copy; #{new Date().getUTCFullYear() + " - " + new Date(client.user.createdTimestamp).getUTCFullYear()} #{client.user.username}. All rights reserved.
